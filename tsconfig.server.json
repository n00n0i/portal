{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "outDir": "dist-server",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "types": [
      "node"
    ]
  },
  "include": ["server/**/*.ts"]
}
